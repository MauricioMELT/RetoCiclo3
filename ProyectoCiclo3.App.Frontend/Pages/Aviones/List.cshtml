@page
@model ProyectoCiclo3.App.Frontend.Pages.ListAvionesModel
@{
}
 
<h1>Listado de Aviones</h1>
<table class="table">
    <thead>
        <th>Id</th>
        <th scope="col">marca</th>
        <th scope="col">modelo</th>
        <th scope="col">asientos</th>
        <th scope="col">ba√±os</th>
        <th scope="col">peso</th>
        <th>Acciones</th>
    </thead>
    @foreach (var avion in Model.Aviones)
    {
        <tr>
            <td>@avion.id</td>
            <td>@avion.marca</td>
            <td>@avion.modelo</td>
            <td>@avion.asientos</td>
            <td>@avion.banos</td>
            <td>@avion.peso</td>
            <td>
              <a class="btn btn-info" asp-page="./Details" asp-route-avionId="@avion.id"><i class="fas fa-adjust"></i>Ver</a>
              <a class="btn btn-info" asp-page="./Edit" asp-route-avionId="@avion.id">Editar</a>
              <a class="btn btn-danger" href="">Eliminar</a>
              </td>
        </tr>
    }
</table>